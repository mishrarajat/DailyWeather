{
	"name": "Daily Weather",
	"description" : "Displays the weather for your location",
	"version": "1.00",
	"manifest_version": 1,
	"description": "Gets weather information",
	"options_page": "",
	"background": { "page": "" },
	
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"css": ["css/in.css"],
		"js": ["js/in.js"]
		}],	
	"browser_action": {
		"default_icon": " ",
		"default_title": "Daily Weather"
	},
	
	"permissions": [
	    "webNavigation", 
		"tabs",
		"geolocation"
	],
	"web_accessible_resources": 
		[
			"popup.html", 
		]
}
